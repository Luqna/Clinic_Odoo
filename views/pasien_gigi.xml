<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pasien_gigi_form" model="ir.ui.view">
        <field name="name">pasien.gigi.form</field>
        <field name="model">pasien.gigi</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="duplicate_to_confirmation" type="object" string="Ajukan Konfirmasi" class="oe_highlight" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name_gigi"/>
                            <field name="nip_gigi"/>
                            <field name="posisi_gigi"/>
                        </group>
                        <group> 
                            <field name="tanggal_gigi"/>
                            <field name="kode_work_center_gigi"/>
                            <field name="jam_gigi"/>
                        </group> 
                    </group> 
                </sheet>
            </form> 
        </field>          
    </record>

    <record id="pasien_gigi_tree" model="ir.ui.view">
        <field name="name">pasien.gigi.view</field>
        <field name="model">pasien.gigi</field>
        <field name="arch" type="xml">
            <tree>
                <!-- <field name="reference_pasien_gigi"/> -->
                <field name="name_gigi"/>
                <field name="nip_gigi"/>
                <field name="tanggal_gigi"/>
                <field name="posisi_gigi"/>
                <field name="kode_work_center_gigi"/>
                <field name="jam_gigi"/>
                <!-- <field name="status_gigi"/> -->
            </tree>
        </field>    
    </record>

    <record id="pasien_gigi_kanban" model="ir.ui.view">
        <field name="name">pasien.gigi.view</field>
        <field name="model">pasien.gigi</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name_gigi"/>
                <field name="nip_gigi"/>
                <field name="tanggal_gigi"/>
                <field name="kode_work_center_gigi"/>
                <templates>
                     <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul> 
                                    <li>
                                        <field name="name_gigi"/>
                                    </li>
                                    <li> 
                                        <field name="nip_gigi"/>
                                    </li>
                                    <li> 
                                        <field name="jam_gigi"/>
                                    </li>
                                    <li> 
                                        <field name="tanggal_gigi"/>
                                    </li>
                                    <li> 
                                        <field name="posisi_gigi"/>
                                    </li>
                                    <li>
                                        <field name="kode_work_center_gigi"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t> 
                </templates>
            </kanban>
        </field>
    </record>

    <record id="pasien_gigi_action" model="ir.actions.act_window">
        <field name="name">Pendaftaran Poli Gigi</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pasien.gigi</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_noncontent_smiling_face">
                Tuliskan keluhanmu, utamakan kesehatanmu!!!
            </p>
        </field>
    </record>

    <menuitem
        id="poli_gigi"
        name="Poli Gigi"
        parent="poli_pendaftaran"
        action="pasien_gigi_action"
        sequence="10"/> 

</odoo>