<odoo>
    <record id="view_pasien_konfirmasi_form" model="ir.ui.view">
        <field name="name">pasien.konfirmasi.form</field>
        <field name="model">pasien.konfirmasi</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name_gigi"/>
                            <field name="nip_gigi"/>
                            <field name="posisi_gigi"/>
                        </group>
                        <group> 
                            <field name="tanggal_gigi"/>
                            <field name="kode_work_center_gigi"/>
                            <field name="jam_gigi"/>
                        </group> 
                    </group> 
                </sheet>
            </form> 
        </field>          
    </record>

    <record id="pasien_konfirmasi_tree" model="ir.ui.view">
        <field name="name">pasien.konfirmasi.view</field>
        <field name="model">pasien.konfirmasi</field>
        <field name="arch" type="xml">
            <tree>
                <!-- <field name="reference_pasien_umum"/> -->
                <field name="name_gigi"/>
                <field name="nip_gigi"/>
                <field name="tanggal_gigi"/>
                <field name="posisi_gigi"/>
                <field name="kode_work_center_gigi"/>
                <field name="jam_gigi"/>
                <!-- <field name="state_umum"/> -->
            </tree>
        </field>    
    </record>

