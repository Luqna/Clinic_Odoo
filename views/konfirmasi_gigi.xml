<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_konfirmasi_gigi_form" model="ir.ui.view">
        <field name="name">pasien.konfirmasi.form</field>
        <field name="model">pasien.konfirmasi</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_confirm" name="action_confirm" string="Confirm" class="btn-primary" state="confirm" confirm="Apakah anda yakin ingin menyetujui?" type="object"/>
                    <button id="button_cancel" name="action_cancel" string="Cancel" class="btn-primary" state="cancel" confirm="Apakah anda yakin ingin membatalkan?" type="object"/>
                    <field name="state_gigi" widget="statusbar" statusbar_visible="draft,done,confirm"/>
                    <button id="button_duplicate" string="Terkonfirmasi" type="object" class="oe_highlight" name="duplicat" attrs="{'invisible': [('state_gigi', 'in', ['draft', 'cancel'])]}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name_gigi"/>
                            <field name="nip_gigi"/>
                            <field name="posisi_gigi"/>
                        </group>
                        <group> 
                            <field name="tanggal_gigi"/>
                            <field name="kode_work_center_gigi"/>
                            <field name="jam_gigi"/>
                            <field name="state_gigi"/>
                        </group> 
                    </group> 
                </sheet>
            </form> 
        </field>          
    </record>

    <record id="konfirmasi_gigi_tree" model="ir.ui.view">
        <field name="name">pasien.konfirmasi.view</field>
        <field name="model">pasien.konfirmasi</field>
        <field name="arch" type="xml">
            <tree>
                <!-- <field name="reference_pasien_umum"/> -->
                <field name="name_gigi"/>
                <field name="nip_gigi"/>
                <field name="tanggal_gigi"/>
                <field name="posisi_gigi"/>
                <field name="kode_work_center_gigi"/>
                <field name="jam_gigi"/>
                <field name="state_gigi"/>
            </tree>
        </field>    
    </record>

    <record id="konfirmasi_gigi_action" model="ir.actions.act_window">
        <field name="name">Konfirmasi Poli Gigi</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pasien.konfirmasi</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_noncontent_smiling_face">
                Tuliskan keluhanmu, utamakan kesehatanmu!!!
            </p>
        </field>
    </record>

    <menuitem
        id="konfirmasi_pasien"
        name="Konfirmasi Pendaftaran"
        parent="poli_pasien"
        sequence="10"/> 
    
    <menuitem
        id="pasien_konfirmasi_gigi"
        name="Konfirmasi Poli Gigi"
        parent="konfirmasi_pasien"
        action="konfirmasi_gigi_action"
        sequence="10"/>
</odoo>