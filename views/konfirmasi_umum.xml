<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_konfirmasi_umum_form" model="ir.ui.view">
        <field name="name">konfirmasi.pasien.form</field>
        <field name="model">konfirmasi.pasien</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_confirm" name="action_confirm" string="Confirm" class="btn-primary" state="confirm" confirm="Apakah anda yakin ingin menyetujui?" type="object"/>
                    <button id="button_cancel" name="action_cancel" string="Cancel" class="btn-primary" state="cancel" confirm="Apakah anda yakin ingin membatalkan?" type="object"/>
                    <field name="state_umum" widget="statusbar" statusbar_visible="draft,done,confirm"/>
                    <button id="button_duplicate" string="Terkonfirmasi" type="object" class="oe_highlight" name="duplikat_umum" attrs="{'invisible': [('state_umum', 'in', ['draft', 'cancel'])]}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name_umum"/>
                            <field name="nip_umum"/>
                            <field name="posisi_umum"/>
                        </group>
                        <group> 
                            <field name="tanggal_umum"/>
                            <field name="kode_work_center_umum"/>
                            <field name="jam_umum"/>
                            <field name="state_umum"/>
                        </group> 
                    </group> 
                </sheet>
            </form> 
        </field>          
    </record>

    <record id="konfirmasi_umum_tree" model="ir.ui.view">
        <field name="name">konfirmasi.pasien.view</field>
        <field name="model">konfirmasi.pasien</field>
        <field name="arch" type="xml">
            <tree>
                <!-- <field name="reference_pasien_umum"/> -->
                <field name="name_umum"/>
                <field name="nip_umum"/>
                <field name="tanggal_umum"/>
                <field name="posisi_umum"/>
                <field name="kode_work_center_umum"/>
                <field name="jam_umum"/>
                <field name="state_umum"/>
            </tree>
        </field>    
    </record>

    <record id="konfirmasi_umum_action" model="ir.actions.act_window">
        <field name="name">Konfirmasi Poli Umum</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">konfirmasi.pasien</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_noncontent_smiling_face">
                Tuliskan keluhanmu, utamakan kesehatanmu!!!
            </p>
        </field>
    </record>

    <menuitem
        id="pasien_konfirmasi_umum"
        name="Konfirmasi Poli Umum"
        parent="konfirmasi_pasien"
        action="konfirmasi_umum_action"
        sequence="10"/>
</odoo>